<div class="container my-5">
  <a href="category/create" class="button is-primary my-4">Add a new category</a>
  {{#each categories}}
  <nav class="level my-5">
    <!-- Left side -->
    <div class="level-left">
      <div class="level-item is-flex is-align-items-center">
        <figure class="image is-128x128">
          <img class="image is-128x128" src="{{this.image}}">
        </figure>
      </div>
      <p class="title ml-3 has-text-centered">{{this.name}}</p>
    </div>

    <!-- Right side -->
    <div class="level-right">
      <p class="level-item"><a href="/category/{{this._id}}/update">Update</a></p>
      <p class="level-item"><a href="/category/{{this._id}}/delete">Delete</a></p>
      <p class="level-item"><a href="/category/{{this._id}}/items" class="button is-success">View Items</a></p>
    </div>
  </nav>
  <hr>
  {{/each}}
</div>