<div class="container my-5">
  <h1 class="title has-text-centered">Delete the Item: {{encodeMyString item.name}}</h1>

  <p class="subtitle mt-6" >Are you sure you want to delete this item?</p>

  <form action="" method="POST">
    <input type="hidden" name="itemid" value="{{item._id}}" required>

    <div class="field ">
      <label class="label">Admin password</label>
      <div class="control has-icons-left">
        <input class="input" type="password" name='password' required>
        <span class="icon is-small is-left">
          <i class="fas fa-lock"></i>
        </span>
      </div>
    </div>

    <div class="buttons my-4">
      <button class="button is-danger">Delete</button>
      <a class="button mx-3" href="/items">Go back</a>
    </div>

  </form>

</div>